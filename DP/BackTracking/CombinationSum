class Solution {
    List<List<Integer>> ans;
    public List<List<Integer>> combinationSum(int[] candidates, int target) {
        ans = new ArrayList<>();
        helper(candidates, candidates.length - 1, target, new ArrayList<>());
        return ans;
    }
    public void helper(int[] arr, int idx, int target, List<Integer> curr){
        if(idx < 0 || target <= 0){
            if(target == 0)ans.add(new ArrayList<>(curr));
            return;
        }
        curr.add(arr[idx]);
        helper(arr, idx, target - arr[idx], curr);
        curr.remove(curr.size() - 1);
        helper(arr, idx - 1, target, curr);
    }
}
